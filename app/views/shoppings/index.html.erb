<p id="notice"><%= notice %></p>

<h1>Shoppings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Imgurl</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoppings.each do |shopping| %>
      <tr>
        <td><%= shopping.name %></td>
        <td><%= shopping.price %></td>
        <td><%= shopping.imgurl %></td>
        <td><%= shopping.description %></td>
        <td><%= link_to 'Show', shopping %></td>
        <td><%= link_to 'Edit', edit_shopping_path(shopping) %></td>
        <td><%= link_to 'Destroy', shopping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shopping', new_shopping_path %>
